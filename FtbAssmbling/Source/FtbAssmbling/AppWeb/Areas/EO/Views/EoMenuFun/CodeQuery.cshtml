        function CQ_EoMenuFunOpen() {
            CodeQuery(500, 800, true, "@Url.Action("CodeQuery", "EoMenuFun")" + "?RequestKey=EoMenuFun", "查詢");
        }

        function CQ_EoMenuFunFinish(item) {
            // TODO: 回傳值要更新的欄位
            $('#ID').val(item.EOMF_MenuFunId);
            $('#Code').val(item.EO_MenuFunCode);
            $('#Name').val(item.EO_MenuFunName);
        }

        $("#CQ_Result").change(function () {
            //取得回傳的資料(JSON String)
            var jsonString = $("#CQ_Result").val();
            //alert(jsonString);

            //解析回傳的資料(JSON String --> JSON Object)
            var returnObj = JSON.parse(jsonString, function (key, value) {
                var type;
