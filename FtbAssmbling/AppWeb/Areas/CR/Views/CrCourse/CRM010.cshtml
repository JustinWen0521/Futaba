            changeSeq(Seq);
            showMsg = "不允許切換到該頁籤!";
            var TabListener = initTabs(tabs);

            try {
                TabListener.whatButtonFireEvent = function (ui) {
                    switch (getSelectIndex(ui)) {
                        case 0:
                            //回到原查詢層級-->不重新查詢
                            if (queryLevel == 0 && recordCountCourse > 0) {
                                return true;
                            }
                            //使用者自行切換頁面
                            //switch (currentpageIndex) {
                            //    case 1:
                            //        //if (isAddNew) {
                            //        //    if (recordCountClass > 0)
                            //        //        return true;

                            //        //    ShowMessage("請新增班別資料");
                            //        //    return false;
                            //        //}
                            //        //if (queryLevel == 1 && !selRowClass) {
                            //        //    ShowMessage("請先選擇一筆資料");
                            //        //    return false;
                            //        //}
                            //        if (selRowCourse)
                            //            return true;
                            //        break;
                            //    case 2:
                            //        //if (isAddNew)
                            //        //    return true;

                            //        //if (queryLevel == 2 && !selRowRegistration && !selRowClass) {
                            //        //    ShowMessage("請先選擇一筆資料");
                            //        //    return false;
                            //        //}
                            //        if (selRowCourse)
                            //            return true;
                            //        break;
                            //    default:
                            //        if (selRowCourse)
                            //            return true;
                            //}
                            if (selRowCourse)
                                return true;
                            doQuery_Course();
                            break;
                        case 1:
                            //回到原查詢層級-->不重新查詢
                            if (queryLevel == 1 && recordCountClass > 0) {
                                return true;
                            }
                            //使用者自行切換頁面
                            switch (currentpageIndex) {
                                case 0:
                                    if (!selRowCourse) {
                                        ShowMessage("請先選擇一筆資料");
                                        return false;
                                    }
                                    break;
                                case 2:
