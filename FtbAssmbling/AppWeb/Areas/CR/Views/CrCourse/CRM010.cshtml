                                    //    ShowMessage("請先選擇一筆資料");
                                    //    return false;
                                    //}
                                    if (selRowClass)
                                        return true;
                                    break;
                                default:
                                    if (selRowClass)
                                        return true;
                            }
                            doQuery_Class();
                            break;
